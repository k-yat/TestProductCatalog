{% extends 'base.html.twig' %}

{% block body %}
    {% if pagination %}
        <h4 class="w-50 my-3 mx-auto">Products: </h4>
        <div class="mx-auto w-50">
            {% for product in pagination %}
                {% include 'product/show.html.twig' with {'product': product} %}
            {% endfor %}
        </div>
        <div class="w-50 my-3 mx-auto">
            {{ knp_pagination_render(pagination) }}
        </div>
    {% else %}
        <h4 class="w-50 my-3 mx-auto">No products.</h4>
    {% endif %}
{% endblock body %}
